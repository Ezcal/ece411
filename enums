  POS_X1,
  POS_X2,
  POS_X3,
  POS_X4,
  NEG_X1,
  NEG_X2,
  NEG_X3,
  NEG_X4,
  POS_Y1,
  POS_Y2,
  POS_Y3,
  POS_Y4,
  NEG_Y1,
  NEG_Y2,
  NEG_Y3,
  NEG_Y4,
  CENTERED,
  NONE
} led_axis_type;

led_axis_type led = NONE; // START WITH THE NONE STATE 
