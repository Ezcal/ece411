typedef enum {
            POS_X_AXIS, 
            NEG_X_AXIS, 
            POS_Y_AXIS, 
            NEG_Y_AXIS,
            NONE
          } 
          axis_type;
          
axis_type axis = NONE; // START WITH THE NONE STATE

